@model IEnumerable<Nhom24.Models.DanhMucSanPham>

@{
    ViewData["Title"] = "DANH MỤC SẢN PHẨM";
}

<h1>DANH MỤC SẢN PHẨM</h1>

<p>
    <a class="btn btn-warning" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-danger">
    <thead>
        <tr class="table-success text-center">
            <th>
                ID Danh Mục Sản Phẩm
            </th>
            <th>
                Tên Danh Mục Sản Phẩm
            </th>
            <th>
                Tuỳ Chọn
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="align-middle">
            <td>
                    @Html.DisplayFor(modelItem => item.DanhMucSanPhamID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DanhMucSanPhamName)
            </td>
            <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.DanhMucSanPhamID" class="btn btn-info">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DanhMucSanPhamID" class="btn btn-warning">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.DanhMucSanPhamID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
